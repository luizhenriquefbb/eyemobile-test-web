{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "indent": [
            "error",
            4,
            {
                "SwitchCase": 1
            }
        ],
        "react/jsx-uses-react": "error",
        "react/jsx-uses-vars": "error",
        "quotes": [
            "warn",
            "single"
        ],
        "comma-dangle": [
            "warn",
            {
                "arrays": "always",
                "objects": "always",
                "imports": "always",
                "exports": "never",
                "functions": "never"
            }
        ],
        "semi": [
            "warn",
            "always"
        ],
        "max-len": [
            "warn",
            {
                "code": 100
            }
        ]
    }
}